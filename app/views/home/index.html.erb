<div class="d-flex flex-column align-items-center justify-content-center mt-4">
  <h1>Welcome on the home page!</h1>
  <h2>List of all users:</h2>
  <ul>
    <% @users.each do |user| %>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <li><%= user.full_name %></li>
        <%= link_to "Delete", "user/#{user.id}", method: :delete, class: "btn btn-primary ms-3" %>
      </div>
    <% end %>
  </ul>

  <h2>List of all tickets:</h2>
  <ul>
    <% @tickets.each do |ticket| %>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <li>
          <p>Title: <%= ticket.title %></p>
          <p>Description: <%= ticket.description %></p>
          <p>Due date: <%= ticket.due_date %></p>
          <p>Status: <%= ticket.status_id %></p>
          <p>Ticket progress: <%= ticket.progress %></p>
          <p>Person assigned to a ticket: <%= User.find(ticket.user.id).full_name %></p>
        </li>
      </div>
    <% end %>
  </ul>
</div>
